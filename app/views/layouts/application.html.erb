  <%= csrf_meta_tag %>
</head>
<body>
  <div id="banner">
      <%= image_tag("logo.png")%>
      <%= @page_title || "Pragmatic Bookshelf"%>
  </div>
  <div id="columns">
    <div id="side">
        <a href="#">Home</a><br/>
        <a href="#">Questions</a><br/>
        <a href="#">News</a><br/>
        <a href="#">Test</a><br/>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
